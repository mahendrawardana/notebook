<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listItemNoteImg"
        android:contentDescription="@string/list_note_item_img_desc"
        android:src="@drawable/facebook"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/list_note_item_title"
        android:id="@+id/listItemNoteTitle"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_note_item_body"
        android:id="@+id/listItemNoteBody"
        android:layout_below="@id/listItemNoteTitle"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/listItemNoteImg"
        android:ellipsize="end"
        android:maxLines="2"/>

</RelativeLayout>
